{
    "name": "fuzion-lang",
    "displayName": "Fuzion",
    "description": "Supports the development in the Fuzion programming language",
    "version": "0.73.0",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Linters",
        "Programming Languages",
        "Snippets"
    ],
    "icon": "images/fuzion_logo_196.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/tokiwa-software/vscode-fuzion"
    },
    "publisher": "tokiwa-software",
    "contributes": {
        "languages": [
            {
                "id": "Fuzion",
                "aliases": [
                    "Fuzion",
                    "fuzion"
                ],
                "extensions": [
                    ".fz"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "Fuzion",
                "scopeName": "source.fz",
                "path": "./syntaxes/fuzion.tmLanguage.json"
            }
        ],
        "configuration": {
            "title": "fuzion",
            "type": "object",
            "properties": {
                "fuzion.java.modules": {
                    "type": [
                        "array"
                    ],
                    "items": {
                        "type": "string",
                        "enum": [
                            "java.base",
                            "java.datatransfer",
                            "java.desktop",
                            "java.xml"
                        ]
                    },
                    "description": "Which java modules to enable"
                }
            }
        }
    },
    "dependencies": {
        "vscode-languageclient": "^8.0.1"
    },
    "devDependencies": {
        "@types/node": "^17.0.35",
        "@types/vscode": "^1.67.0",
        "esbuild": "^0.14.39",
        "ovsx": "^0.2.1",
        "vsce": "^1.100.0"
    },
    "activationEvents": [
        "onLanguage:Fuzion"
    ],
    "main": "main.js",
    "scripts": {
        "esbuild": "esbuild ./main.ts --bundle --outfile=main.js --external:vscode --format=cjs --platform=node --sourcemap",
        "###comment: vscode:prepublish is called automatically by vscode:package": "",
        "vscode:prepublish": "npm i && npm run esbuild && make -C fuzion-lsp-server jar",
        "vscode:package": "npx vsce package",
        "ovsx-publish": "echo 'npx ovsx publish fuzion-lang-${version}.vsix -p <token>'"
    },
    "__metadata": {
        "id": "299266fa-6d15-42d9-aac6-0cbe70c9925b",
        "publisherDisplayName": null,
        "publisherId": "348bd022-7210-4d7d-a705-96a49709926b"
    }
}
