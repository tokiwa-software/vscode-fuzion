{
    "name": "fuzion-lang",
    "displayName": "Fuzion",
    "description": "Syntax highlighting for Fuzion Language",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.53.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "icon": "images/fuzion_logo_196.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/Ivo-Balbaert/vscode-fuzion"
    },
    "publisher": "Ivo-Balbaert",
    "contributes": {
        "languages": [
            {
                "id": "Fuzion",
                "aliases": [
                    "Fuzion",
                    "fuzion"
                ],
                "extensions": [
                    ".fz"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "Fuzion",
                "scopeName": "source.fz",
                "path": "./syntaxes/fuzion.tmLanguage.json"
            }
        ]
    },
    "dependencies": {
        "vscode-languageclient": "^7.0.0"
    },
    "devDependencies": {
        "@types/vscode": "^1.52.0",
        "esbuild": "^0.12.25",
        "ovsx": "^0.2.1",
        "vsce": "^1.99.0"
    },
    "activationEvents": [
        "onLanguage:Fuzion"
    ],
    "main": "main.js",
    "scripts": {
        "esbuild": "esbuild ./main.ts --bundle --outfile=main.js --external:vscode --format=cjs --platform=node --sourcemap",
        "vscode:prepublish": "npm i && npx esbuild && make -C fuzion-lsp-server classes",
        "vscode:package": "./node_modules/.bin/vsce package",
        "ovsx-publish": "echo 'npx ovsx publish fuzion-lang-${version}.vsix -p <token>'"
    }
}
