{
    "name": "fuzion-lang",
    "displayName": "Fuzion",
    "description": "Syntax highlighting for Fuzion Language",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.53.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "icon": "images/fuzion_logo_196.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/Ivo-Balbaert/vscode-fuzion"
    },
    "publisher": "Ivo-Balbaert",
    "contributes": {
        "languages": [
            {
                "id": "Fuzion",
                "aliases": [
                    "Fuzion",
                    "fuzion"
                ],
                "extensions": [
                    ".fz"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "Fuzion",
                "scopeName": "source.fz",
                "path": "./syntaxes/fuzion.tmLanguage.json"
            }
        ]
    },
    "dependencies": {
        "vscode-languageclient": "^7.0.0"
    },
    "devDependencies": {
        "@types/vscode": "^1.52.0"
    },
    "activationEvents": [
        "onLanguage:Fuzion"
    ],
    "main": "main.js"
}
